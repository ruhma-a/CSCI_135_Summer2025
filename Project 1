// This project is a simple C++ program that converts the given First and Last name into uppercase. 
#include <iostream>
#include <string>
using namespace std; // Allows us to use standard library for things like "String" and "cout"

int main(){
    string fullName = "Ruhma Arshad"; // Hardcodes full name 
    string firstSlice = fullName.substr(0, 5); // Extracts characters of first name from full name
    string lastSlice = fullName.substr(6); // Extracts remaining charcaters for last name, not including space
    
    for (char & c : firstSlice) { // Converts first name to uppercase if lowercase
        if (c >= 'a' && c <= 'z') {
        c = c - 32; // converts to uppercase by subtracting from ASCII Val
    }
    }
    for (char & c : lastSlice) { // Converts last name to lowercase if uppercase
    if (c >= 'a' && c <= 'z') {
        c = c - 32; // converts to uppercase by subtracting from ASCII Val
    }
    }
    cout << "Transformed Name: " << firstSlice << " " << lastSlice << endl; // Writes out transformed name with a space to look pretty ;)
    return 0;
}
